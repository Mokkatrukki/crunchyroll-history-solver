{
    "manifest_version": 3,
    "name": "Crunchyroll History Tracker",
    "version": "1.0",
    "description": "Track and organize your Crunchyroll watch history",
    "permissions": [
      "sidePanel",
      "contextMenus",
      "storage",
      "scripting",
      "tabs",
      "activeTab"
    ],
    "host_permissions": [
      "https://www.crunchyroll.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.crunchyroll.com/history*"],
        "js": ["content-script.js"]
      }
    ],
    "action": {
      "default_title": "Crunchyroll History",
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }